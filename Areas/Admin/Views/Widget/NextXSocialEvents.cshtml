@model MrCMS.Web.Apps.SocialEvents.Widgets.NextXSocialEvents
<div class="form-group">
    @Html.LabelFor(x => x.NumberOfSocialEvents, "Number of social events to show")
    @Html.TextBoxFor(x => x.NumberOfSocialEvents, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(x => x.RelatedSocialEventList, "Social Events List")
    @Html.DropDownListFor(x => x.RelatedSocialEventList.Id, ViewData["socialEventsList"] as IEnumerable<SelectListItem>, new { data_val = "true", data_val_required = "Social Events list needs to be selected.", @class = "form-control" })
</div>